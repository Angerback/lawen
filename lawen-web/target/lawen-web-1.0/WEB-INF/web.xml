            <web-resource-name>tipousuario</web-resource-name>
            <description/>
            <url-pattern>/faces/tipoUsuario/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>admin page</web-resource-name>
            <description/>
            <url-pattern>/faces/admin/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>tipopat</web-resource-name>
            <description/>
            <url-pattern>/faces/tipoPatologia/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>tipopro</web-resource-name>
            <description/>
            <url-pattern>/faces/tipoPrograma/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>censoPCCV</web-resource-name>
            <description/>
            <url-pattern>/faces/censoPCCV/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>censoPCCVnoREM</web-resource-name>
            <description/>
            <url-pattern>/faces/censoPCCVnoREM/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>secureDomain</realm-name>
        <form-login-config>
            <form-login-page>/faces/index.xhtml</form-login-page>
            <form-error-page>/faces/index.xhtml</form-error-page>
        </form-login-config>
    </login-config>
